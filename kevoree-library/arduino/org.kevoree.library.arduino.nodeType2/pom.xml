
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kevoree.library.arduino</groupId>
    <artifactId>org.kevoree.library.arduino.nodeType2</artifactId>
    <packaging>bundle</packaging>
    <name>Kevoree :: Library :: Arduino :: NodeType2</name>
    <version>1.1.0-RC2</version>

    <properties>
        <scala.version>2.8.1</scala.version>
    </properties>

    <parent>
        <artifactId>org.kevoree.library.arduino.root</artifactId>
        <groupId>org.kevoree.library.arduino</groupId>
        <version>1.1.0-RC2</version>
        <relativePath>../org.kevoree.library.arduino.root/pom.xml</relativePath>
    </parent>

    <dependencies>
        <dependency>
            <groupId>org.kevoree</groupId>
            <artifactId>org.kevoree.framework</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree</groupId>
            <artifactId>org.kevoree.kompare</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.tools</groupId>
            <artifactId>org.kevoree.tools.marShellTransform</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.tools</groupId>
            <artifactId>org.kevoree.tools.marShell</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.extra</groupId>
            <artifactId>org.kevoree.extra.osgi.rxtx</artifactId>
            <version>2.2.0</version>
            <scope>provided</scope>
        </dependency>


        <!-- Temp dependency -->
        
        <dependency>
            <groupId>org.kevoree.library.arduino</groupId>
            <artifactId>org.kevoree.library.arduino.components</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
    <!--
    <dependency>
        <groupId>org.kevoree.library.arduino</groupId>
        <artifactId>org.kevoree.library.arduino.channels</artifactId>
        <version>${kevoree.version}</version>
    </dependency>
        -->
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <!--   <Bundle-Activator>org.kevoree.kompare.KevoreeKompareActivator</Bundle-Activator>  -->
                        <Import-Package>!org.wayoda.*,!org.kevoree.library.arduinoNodeType.*,*</Import-Package>
                        <Export-Package>org.kevoree.library.arduinoNodeType.*,org.wayoda.*</Export-Package>
                        <Private-Package>org.kevoree.tools.marShell*</Private-Package>
                        <DynamicImport-Package>*</DynamicImport-Package>
                    </instructions>
                </configuration>
            </plugin>


            <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
                <executions>
                    <execution>
                        <id>scala-compile-first</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>add-source</goal>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>scala-test-compile</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jvmArgs>
                        <jvmArg>-Xmx1024m</jvmArg>
                    </jvmArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>

</project>
