<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

	<modelVersion>4.0.0</modelVersion>
	<groupId>org.kevoree.library</groupId>
	<artifactId>org.kevoree.library.esper</artifactId>
	<packaging>bundle</packaging>
	<name>Kevoree :: Library :: Esper</name>

	<parent>
		<artifactId>org.kevoree.library.root</artifactId>
		<groupId>org.kevoree.library</groupId>
		<version>1.1.0-BETA2</version>
		<relativePath>../org.kevoree.library.root/pom.xml</relativePath>
	</parent>
	<repositories>
		<repository>
			<id>codehaus</id>
			<url>http://repository.codehaus.org/com/espertech/esper/</url>
		</repository>
	</repositories>


	<dependencies>
		<dependency>
			<groupId>log4j</groupId>
			<artifactId>log4j</artifactId>
			<version>1.2.16</version>
			<exclusions>
				<exclusion>
					<groupId>javax.jms</groupId>
					<artifactId>jms</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.sun.jdmk</groupId>
					<artifactId>jmxtools</artifactId>
				</exclusion>
				<exclusion>
					<groupId>com.sun.jmx</groupId>
					<artifactId>jmxri</artifactId>
				</exclusion>
			</exclusions>
			<systemPath>${basedir}/lib/log4j-1.2.16.jar</systemPath>
			<scope>system</scope>
		</dependency>

		<dependency>
			<groupId>commons-logging</groupId>
			<artifactId>commons-logging</artifactId>
			<version>1.1.1</version>
			<systemPath>${basedir}/lib/commons-logging-1.1.1.jar</systemPath>
			<scope>system</scope>
		</dependency>
		<dependency>
			<groupId>org.antlr</groupId>
			<artifactId>antlr</artifactId>
			<version>3.2</version>
			<systemPath>${basedir}/lib/antlr-2.7.7.jar</systemPath>
			<scope>system</scope>
		</dependency>
		<dependency>
			<groupId>org.antlr</groupId>
			<artifactId>antlr-runtime</artifactId>
			<version>3.2</version>
			<systemPath>${basedir}/lib/antlr-runtime-3.2.jar</systemPath>
			<scope>system</scope>
		</dependency>
		<dependency>
			<groupId>org.antlr</groupId>
			<artifactId>stringtemplate</artifactId>
			<version>3.2</version>
			<systemPath>${basedir}/lib/stringtemplate-3.2.jar</systemPath>
			<scope>system</scope>
		</dependency>
		<dependency>
			<groupId>cglib</groupId>
			<artifactId>cglib-nodep</artifactId>
			<version>2.2</version>
			<systemPath>${basedir}/lib/cglib-nodep-2.2.jar</systemPath>
			<scope>system</scope>
		</dependency>
		<dependency>
			<groupId>com.espertech</groupId>
			<artifactId>esper</artifactId>
			<version>4.1.0</version>
			<systemPath>${basedir}/lib/esper-4.0.0.jar</systemPath>
			<scope>system</scope>
		</dependency>

	</dependencies>


	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.felix</groupId>
				<artifactId>maven-bundle-plugin</artifactId>
				<version>1.4.3</version>
				<extensions>true</extensions>

				<configuration>
					<instructions>
						<Embed-Dependency>esper,cglib-nodep,stringtemplate,antlr-runtime,antlr,commons-logging,log4j</Embed-Dependency>
						<Bundle-ClassPath>.,{maven-dependencies} </Bundle-ClassPath>
						<Bundle-SymbolicName>org.esper</Bundle-SymbolicName>
						<Bundle-Version>${pom.version}</Bundle-Version>
						<Private-Package>org.kevoree.library.esper</Private-Package>
						<DynamicImport-Package>*</DynamicImport-Package>
						<Export-Package>org.kevoree.library.esper</Export-Package>
						<Import-Package>org.kevoree.library.esper,javax.management,javax.naming,!javax.servlet,javax.sql,!com.ibm.uvm.tools,!com.sun.jdmk.comm,!com.sun.org.apache.xerces.internal.dom,!com.sun.org.apache.xerces.internal.impl.dv.xs,!com.sun.org.apache.xerces.internal.xs,!javax.jmdns,!javax.jms,!javax.mail,!javax.mail.internet,!javax.swing,!javax.swing.border,!javax.swing.event,!javax.swing.table,!javax.swing.text,!javax.swing.tree,javax.xml.namespace,javax.xml.parsers,javax.xml.transform,javax.xml.transform.dom,javax.xml.transform.stream,javax.xml.xpath,!junit.framework,!net.sf.cglib.asm.util,!org.apache.avalon.framework.logger,!org.apache.log,!org.apache.tools.ant,!org.apache.tools.ant.types,org.kevoree.framework,org.kevoree.framework.osgi,org.kevoree.framework.port,org.w3c.dom,org.w3c.dom.bootstrap,org.w3c.dom.ls,org.xml.sax,!org.xml.sax.helpers,scala,scala.actors,scala.collection.immutable,scala.reflect,scala.runtime</Import-Package>
					</instructions>
				</configuration>
			</plugin>
		</plugins>
	</build>



</project>
