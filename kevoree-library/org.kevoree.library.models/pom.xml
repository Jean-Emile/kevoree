
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kevoree.library</groupId>
    <artifactId>org.kevoree.library.models</artifactId>
    <packaging>jar</packaging>
    <name>Kevoree :: Library :: Models</name>

    <parent>
        <artifactId>org.kevoree.library.root</artifactId>
        <groupId>org.kevoree.library</groupId>
        <version>1.1.0-BETA1</version>
        <relativePath>../org.kevoree.library.root/pom.xml</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.kevoree.tools</groupId>
                <artifactId>org.kevoree.tools.merger.mavenplugin</artifactId>
                <extensions>true</extensions>
                <executions>
                    <execution>
                        <goals>
                            <goal>generate</goal>
                        </goals>
                        <configuration>
                            <model>${project.build.directory}/classes/defaultLibrary.kev</model>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-install-plugin</artifactId>
                <executions>
                    <execution>
                        <id>install-apk</id>
                        <phase>install</phase>
                        <goals>
                            <goal>install-file</goal>
                        </goals>
                        <configuration>
                            <packaging>kev</packaging>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>${project.artifactId}</artifactId>
                            <file>${project.build.directory}/classes/defaultLibrary.kev</file>
                            <version>${kevoree.version}</version>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <artifactId>maven-deploy-plugin</artifactId>
                <executions>
                    <execution>
                        <id>deploy-jar-apk</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy</goal>
                        </goals>
                        <configuration>
                            <skip>true</skip>
                        </configuration>
                    </execution>
                    <execution>
                        <id>deploy-apk</id>
                        <phase>deploy</phase>
                        <goals>
                            <goal>deploy-file</goal>
                        </goals>
                        <configuration>
                            <file>${project.build.directory}/classes/defaultLibrary.kev</file>
                            <url>http://maven.kevoree.org/libs-release-local/</url>
                            <packaging>kev</packaging>
                            <groupId>${project.groupId}</groupId>
                            <artifactId>${project.artifactId}</artifactId>
                            <version>${kevoree.version}</version>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>org.kevoree.library</groupId>
            <artifactId>org.kevoree.library.fakeDomo</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library</groupId>
            <artifactId>org.kevoree.library.defaultChannels</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library</groupId>
            <artifactId>org.kevoree.library.defaultNodeTypes</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library</groupId>
            <artifactId>org.kevoree.library.gossiper</artifactId>
            <version>${kevoree.version}</version>
        </dependency>        
        <dependency>
            <groupId>org.kevoree.library</groupId>
            <artifactId>org.kevoree.library.sample</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library</groupId>
            <artifactId>org.kevoree.library.restChannels</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library</groupId>
            <artifactId>org.kevoree.library.xmpp</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
        <dependency>
            <groupId>org.kevoree.library</groupId>
            <artifactId>org.kevoree.library.logger.android</artifactId>
            <version>${kevoree.version}</version>
        </dependency>
    </dependencies>





</project>
