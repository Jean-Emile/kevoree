
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <groupId>org.kevoree.library</groupId>
    <artifactId>org.kevoree.library.logger.greg</artifactId>
    <packaging>bundle</packaging>
    <name>Kevoree :: Library :: LoggerGreg</name>
    <version>1.0.0-RC3</version>

    <parent>
        <artifactId>org.kevoree.library.root</artifactId>
        <groupId>org.kevoree.library</groupId>
        <version>1.0.0-RC3</version>
        <relativePath>../org.kevoree.library.root/pom.xml</relativePath>
    </parent>


    <dependencies>
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-math</artifactId>
            <version>2.1</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Import-Package>!org.greg.*,!org.kevoree.library.logger.greg.*,!org.apache.commons.math.*,*</Import-Package>
                        <Private-Package>org.apache.commons.math.*,org.greg.*,org.kevoree.library.logger.greg.*</Private-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>



</project>
