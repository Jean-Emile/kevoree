<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

    <modelVersion>4.0.0</modelVersion>
    <artifactId>org.kevoree.library.javase.socketChannels</artifactId>
    <name>Kevoree :: CoreLibrary :: JavaSE :: SocketChannels</name>
    <version>1.8.9-SNAPSHOT</version>

    <parent>
        <artifactId>org.kevoree.library.javase.root</artifactId>
        <groupId>org.kevoree.corelibrary.javase</groupId>
        <version>1.8.9-SNAPSHOT</version>
        <relativePath>../org.kevoree.library.javase.root/pom.xml</relativePath>
    </parent>

    <build>
        <plugins>
            <plugin>
                <groupId>org.scala-tools</groupId>
                <artifactId>maven-scala-plugin</artifactId>
                <version>2.15.2</version>
                <executions>
                    <execution>
                        <id>scala-compile-first</id>
                        <phase>process-resources</phase>
                        <goals>
                            <goal>add-source</goal>
                            <goal>compile</goal>
                        </goals>
                    </execution>
                    <execution>
                        <id>scala-test-compile</id>
                        <phase>process-test-resources</phase>
                        <goals>
                            <goal>testCompile</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <jvmArgs>
                        <jvmArg>-Xmx1024m</jvmArg>
                    </jvmArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>android-message</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.kevoree.platform</groupId>
                        <artifactId>org.kevoree.platform.mavenrunner</artifactId>
                        <version>${kevoree.version}</version>
                        <configuration>
                            <targetNode>nodeA</targetNode>
                            <viaGroup>sync</viaGroup>
                            <model>${project.basedir}/src/main/kevs/main_message.kevs</model>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>java-message</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.kevoree.platform</groupId>
                        <artifactId>org.kevoree.platform.mavenrunner</artifactId>
                        <version>${kevoree.version}</version>
                        <configuration>
                            <model>${project.basedir}/src/main/kevs/main_message.kevs</model>
                        </configuration>

                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>android-service</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.kevoree.platform</groupId>
                        <artifactId>org.kevoree.platform.mavenrunner</artifactId>
                        <version>${kevoree.version}</version>
                        <configuration>
                            <targetNode>nodeA</targetNode>
                            <viaGroup>sync</viaGroup>
                            <model>${project.basedir}/src/main/kevs/main_service.kevs</model>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
        <profile>
            <id>java-service</id>
            <build>
                <plugins>
                    <plugin>
                        <groupId>org.kevoree.platform</groupId>
                        <artifactId>org.kevoree.platform.mavenrunner</artifactId>
                        <version>${kevoree.version}</version>
                        <configuration>
                            <model>${project.basedir}/src/main/kevs/main_service.kevs</model>
                        </configuration>
                    </plugin>
                </plugins>
            </build>
        </profile>
    </profiles>

</project>